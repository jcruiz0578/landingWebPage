.download
  text-align center
  margin-bottom 3em
  padding  3em 0  // división se section

  &-grid
    margin-top 3em
    margin-left 1em
    margin-right 1em
    display grid
    grid-row-gap 2em //para la separación de filas
    img
      margin-top 1em


  &-item
    padding 1.5em
    border none
    border-radius 0.5em
    box-shadow 0 5px 12px -4px var(--grayishBlue)
    background url("../images/bg-dots.svg") repeat-x center bottom 100px
    .u-p
      margin-bottom 4em
      margin-top  0.5em
    .u-h3
      margin-bottom .5rem
      margin-top 1.5em

