.carousel
  margin 2em 0
  text-align justify


  &-content
    &[open]
      border-bottom 1px solid lightgray
      .carousel-header
        &::marker, &::-webkit-details-marker
          color var(--softRed)

  &-header
    font-size 0.9em
    border-bottom 1px solid lightgray
    padding 1em 0

    &:focus
      outline 0

    &::marker,
    &::-webkit-details-marker
      color var(--softBlue)
      float right

  @media screen and (min-width 1024px)
    border-top  1px solid lightgrey
    max-width  600px
    margin auto




