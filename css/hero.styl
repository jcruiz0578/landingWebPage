.hero
  //border 1px solid red
  padding 4em 0
  text-align center
  &-image
    max-width 100%
  &-buttons
    padding-top 1em

  @media screen and (min-width 1024px)
    text-align left
    padding 2em 0
    &-grid
      align-items center
      display grid // creo el grid
      grid-template-columns 490px 1fr // se da 2 columm
      grid-template-areas "content image" // se crea el area con los elementos
    &-imageContainer
      grid-area image  // se introduce en el area
      position relative
      top 50px
      text-align center

    &-content
      grid-area content // se introduce en el area




