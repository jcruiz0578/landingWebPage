@import "header.styl"
@import "hero.styl"
@import "features.styl"
@import "download.styl"
@import "questions.styl"
@import "join.styl"
@import "footer.styl"


:root
  --softBlue: hsl(231, 69%, 60%)
  --softRed: hsl(0, 94%, 66%)
  --grayishBlue: hsl(229, 8%, 60%)
  --veryDarkBlue: hsl(229, 31%, 21%)

body
  //background lightgray
  font-family 'Rubik', sans-serif
  color var(--veryDarkBlue)
  margin 0
  font-size 18px
ul
  padding 0
  list-style none
  margin 0


.is-hidden
  display none !important

.u-wrapper
  max-width 1280px
  margin auto
  padding  0 1em

.u-h1
  font-size 2em
  font-weight 500
.u-h2
  //@extends .u-h1
  font-size 1.4em

.u-h4
  @extends .u-h1
  font-size 1.3em
  margin-top 0.5em


.u-p
  color var(--grayishBlue)
  line-height 1.8
  font-size .9em
.u-button
  background var(--softBlue)
  color white
  padding 1em 1.1em
  font-size 0.8em
  font-weight bold
  border none
  border-radius 0.5em
  box-shadow 0 5px 12px -4px var(--grayishBlue)
  cursor pointer
  margin-left 0.4em
  -webkit-appearance none
  &:firt-of-type
    margin 0

  &.is-gray
    background ghostwhite
    color var(--veryDarkBlue)
  // modificar el ancho de los BUTTON en section DOWNLOAD
  &.is-fullWidth
    width 100%
  &.is-red
    background var(--softRed)
    color white












